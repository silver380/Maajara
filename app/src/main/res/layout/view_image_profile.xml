<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:autofit="http://schemas.android.com/tools">

    <com.google.android.material.card.MaterialCardView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/profile_card"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:minWidth="@dimen/profile_view_size"
        android:minHeight="@dimen/profile_view_size"
        app:cardCornerRadius="@dimen/profile_view_half_size"
        app:cardBackgroundColor="@color/colorIconTint"
        app:cardElevation="0dp">


        <ImageView
            android:id="@+id/profile_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/test_picture"
            android:translationZ="10dp"
            android:visibility="gone" />

        <ir.blackswan.travelapp.Views.AutoResizeTextView
            android:id="@+id/profile_text"
            style="@style/textTittleBold"
            android:text="م‌ف"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="315sp"
            android:maxLines="1"
            android:layout_margin="5dp"
            android:layout_gravity="center"
            android:textColor="@color/colorWhite" />

    </com.google.android.material.card.MaterialCardView>
</FrameLayout>
