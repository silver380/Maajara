<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/iv_tl"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_small"
            android:layout_marginRight="@dimen/margin_small"
            android:src="@drawable/ic_add"
            app:layout_constraintHorizontal_weight="2"
            app:layout_constraintLeft_toRightOf="@id/view_column2"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/view_column2"
            android:layout_width="0dp"
            android:layout_height="1dp"
            app:layout_constraintHorizontal_weight="5"
            app:layout_constraintLeft_toRightOf="@id/ll_iv"
            app:layout_constraintRight_toLeftOf="@id/iv_tl"
            app:layout_constraintTop_toTopOf="@id/iv_tl" />

        <TextView
            android:id="@+id/tv_tl_name"
            style="@style/textTittleMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="راهنمای سفر"
            app:layout_constraintRight_toRightOf="@id/view_column2"
            app:layout_constraintTop_toTopOf="@id/iv_tl" />

        <com.google.android.material.textview.MaterialTextView
            style="@style/textRegular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_small"
            android:text="4.3"
            app:layout_constraintBottom_toBottomOf="@id/tv_tl_name"
            app:layout_constraintRight_toLeftOf="@id/tv_tl_name"
            app:layout_constraintTop_toTopOf="@id/tv_tl_name" />

        <LinearLayout
            android:id="@+id/ll_iv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/view_column2"
            app:layout_constraintTop_toTopOf="@id/iv_tl">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_very_small"
                android:src="@drawable/ic_email" />


        </LinearLayout>

        <View
            style="@style/vLine"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:visibility="gone"
            app:layout_constraintRight_toLeftOf="@id/iv_tl"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.button.MaterialButton
            style="@style/button.primaryButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_medium"
            android:text="تایید"
            app:layout_constraintRight_toRightOf="@id/iv_tl"
            app:layout_constraintTop_toBottomOf="@id/iv_tl" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>
