<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ir.blackswan.travelapp.Views.ProfileImageView
            android:id="@+id/iv_tl"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/margin_small"
            android:layout_marginHorizontal="@dimen/margin_small"
            android:src="@drawable/test_picture"
            android:scaleType="centerCrop"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintHorizontal_weight="2.35"
            app:layout_constraintLeft_toRightOf="@id/view_column2"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:riv_corner_radius="100dp"
            />

        <View
            android:id="@+id/view_column2"
            android:layout_width="0dp"
            android:layout_height="1dp"
            app:layout_constraintHorizontal_weight="5"
            app:layout_constraintLeft_toRightOf="@id/ll_iv"
            app:layout_constraintRight_toLeftOf="@id/iv_tl"
            app:layout_constraintTop_toTopOf="@id/iv_tl" />

        <TextView
            android:id="@+id/tv_tl_name"
            style="@style/textTittleMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="راهنمای سفر"
            app:layout_constraintRight_toRightOf="@id/view_column2"
            app:layout_constraintTop_toTopOf="@id/iv_tl" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="بیوگرافی"
            style="@style/textHint"
            app:layout_constraintTop_toBottomOf="@id/tv_tl_name"
            app:layout_constraintRight_toRightOf="@id/tv_tl_name"
            app:layout_constraintLeft_toRightOf="@id/ll_iv"
            android:layout_marginHorizontal="@dimen/margin_small"
            android:layout_marginVertical="@dimen/margin_very_small"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="قیمت پیشنهادی"
            style="@style/textRegular"
            app:layout_constraintRight_toLeftOf="@id/confirm_button"
            app:layout_constraintBottom_toBottomOf="@id/confirm_button"
            app:layout_constraintTop_toTopOf="@id/confirm_button"
            android:layout_marginRight="@dimen/margin_medium"
            />

        <ImageView
            android:id="@+id/iv_star"
            android:layout_width="@dimen/quantity_icon_size"
            android:layout_height="@dimen/quantity_icon_size"
            android:layout_marginLeft="@dimen/margin_small"
            android:src="@drawable/ic_star"
            android:layout_marginRight="@dimen/margin_small"
            app:layout_constraintRight_toLeftOf="@id/pointsOf_tl_tv"
            app:layout_constraintTop_toTopOf="@id/pointsOf_tl_tv"
            app:layout_constraintBottom_toBottomOf="@id/pointsOf_tl_tv"
            app:layout_constraintLeft_toRightOf="@id/ll_iv"
            app:tint="@color/colorIconTint" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/pointsOf_tl_tv"
            style="@style/textSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/iv_star"
            android:layout_marginRight="@dimen/margin_small"
            android:text="4.3"
            app:layout_constraintBottom_toBottomOf="@id/tv_tl_name"
            app:layout_constraintRight_toLeftOf="@id/iv_star"
            app:layout_constraintTop_toTopOf="@id/tv_tl_name" />

        <LinearLayout
            android:id="@+id/ll_iv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/view_column2"
            app:layout_constraintTop_toTopOf="@id/iv_tl"
            app:layout_constraintBottom_toBottomOf="parent">

            <ImageView
                android:layout_width="@dimen/tertiary_icon_size"
                android:layout_height="@dimen/tertiary_icon_size"
                android:layout_marginTop="@dimen/margin_very_small"
                android:src="@drawable/ic_telephone"
                android:background="@drawable/circle_solid"
                android:backgroundTint="#54BDA14B"
                android:padding="@dimen/icons_padding"
                android:layout_marginBottom="@dimen/margin_very_small"
                />

            <ImageView
                android:layout_width="@dimen/tertiary_icon_size"
                android:layout_height="@dimen/tertiary_icon_size"
                android:src="@drawable/ic_email"
                android:layout_marginVertical="@dimen/margin_very_small"
                android:background="@drawable/circle_solid"
                android:backgroundTint="#54DC2525"
                android:padding="@dimen/icons_padding"
                />

            <ImageView
                android:layout_width="@dimen/tertiary_icon_size"
                android:layout_height="@dimen/tertiary_icon_size"
                android:src="@drawable/ic_telegram"
                android:layout_marginVertical="@dimen/margin_very_small"
                android:background="@drawable/circle_solid"
                android:backgroundTint="#594CB4DD"
                android:padding="@dimen/icons_padding"
                />

            <ImageView
                android:layout_width="@dimen/tertiary_icon_size"
                android:layout_height="@dimen/tertiary_icon_size"
                android:src="@drawable/ic_whatsapp"
                android:layout_marginVertical="@dimen/margin_very_small"
                android:background="@drawable/circle_solid"
                android:backgroundTint="#391BAC1E"
                android:padding="@dimen/icons_padding"
                />

        </LinearLayout>

        <View
            style="@style/vLine"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:visibility="gone"
            app:layout_constraintRight_toLeftOf="@id/iv_tl"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/confirm_button"
            style="@style/button.primaryButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="تایید"
            android:paddingHorizontal="@dimen/padding_small"
            app:layout_constraintRight_toRightOf="@id/iv_tl"
            app:layout_constraintTop_toBottomOf="@id/iv_tl"
            app:layout_constraintLeft_toLeftOf="@id/iv_tl"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>
