<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/colorTransparent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_status"
        android:layout_width="@dimen/secondary_icon_size"
        android:layout_height="@dimen/secondary_icon_size"
        android:background="@drawable/circle_solid"
        android:translationZ="1dp"
        android:backgroundTint="@color/colorError"
        android:src="@drawable/ic_cross"
        android:padding="@dimen/icons_padding_large"
        android:visibility="gone"
        app:tint="@color/colorWhite"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <View
        android:id="@+id/view_middle"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toTopOf="@id/iv_status"
        app:layout_constraintBottom_toBottomOf="@id/iv_status"
        />

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="0dp"
        app:cardBackgroundColor="@color/colorWhite"
        app:cardCornerRadius="@dimen/radius_medium"
        app:layout_constraintTop_toTopOf="@id/view_middle"
        >


        <com.github.ybq.android.spinkit.SpinKitView
            android:id="@+id/skv_loading"
            style="@style/SpinKitView.Circle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:translationZ="5dp"
            android:layout_marginTop="@dimen/half_secondary_icon_size"
            app:SpinKit_Color="@color/colorIconTint" />

        <TextView
            android:id="@+id/tv_response_message"
            style="@style/textRegular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="" />

    </com.google.android.material.card.MaterialCardView>
</androidx.constraintlayout.widget.ConstraintLayout>
