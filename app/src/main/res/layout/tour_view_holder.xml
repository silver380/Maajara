<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:layout_marginHorizontal="@dimen/margin_small"
    android:layout_marginVertical="@dimen/margin_small"
    app:cardCornerRadius="@dimen/radius_medium">

    <ir.blackswan.travelapp.Views.WebImageView
        android:id="@+id/wiv_tvh_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"

        />



    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_small"
            android:layout_marginTop="@dimen/margin_small"
            android:alpha=".7"
            android:background="#CCFFFFFF"
            app:cardCornerRadius="@dimen/radius_small"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <TextView
                android:id="@+id/tv_tvh_price"
                style="@style/textRegular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/padding_small"
                android:text=" 75000 "

                />
        </com.google.android.material.card.MaterialCardView>


        <ImageView
            android:id="@+id/loc_iv"
            android:layout_width="@dimen/quantity_icon_size"
            android:layout_height="@dimen/quantity_icon_size"
            android:layout_marginBottom="@dimen/margin_very_small"
            android:src="@drawable/ic_location"
            app:layout_constraintBottom_toTopOf="@id/duration_iv"
            app:layout_constraintEnd_toEndOf="@id/duration_iv"
            app:layout_constraintStart_toStartOf="@id/duration_iv"
            app:tint="@color/colorWhite" />

        <TextView
            android:id="@+id/tv_tvh_location"
            style="@style/textSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_very_small"
            android:text="@string/location"
            android:textColor="#E6FFFFFF"
            app:layout_constraintBottom_toBottomOf="@id/loc_iv"
            app:layout_constraintStart_toEndOf="@id/loc_iv"
            app:layout_constraintTop_toTopOf="@id/loc_iv" />

        <ImageView
            android:id="@+id/duration_iv"
            android:layout_width="@dimen/quantity_icon_size"
            android:layout_height="@dimen/quantity_icon_size"
            android:layout_marginStart="@dimen/margin_small"
            android:layout_marginBottom="@dimen/margin_small"
            android:src="@drawable/ic_duration"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:tint="@color/colorWhite" />

        <TextView
            android:id="@+id/tv_tvh_start_date"
            style="@style/textSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_very_small"
            android:text="@string/start_date"
            android:textColor="#E6FFFFFF"
            app:layout_constraintBottom_toBottomOf="@id/duration_iv"
            app:layout_constraintStart_toEndOf="@id/duration_iv"
            app:layout_constraintTop_toTopOf="@id/duration_iv" />

        <ImageView
            android:id="@+id/moon_iv"
            android:layout_width="@dimen/quantity_icon_size"
            android:layout_height="@dimen/quantity_icon_size"
            android:layout_marginEnd="@dimen/margin_small"
            android:layout_marginBottom="@dimen/margin_small"
            android:src="@drawable/ic_moon"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:tint="@color/colorWhite" />

        <TextView
            android:id="@+id/tv_tvh_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_very_small"
            android:text="-1"
            android:visibility="gone"
            android:textColor="#E6FFFFFF"
            app:layout_constraintBottom_toBottomOf="@id/moon_iv"
            app:layout_constraintEnd_toStartOf="@id/moon_iv"
            app:layout_constraintTop_toTopOf="@id/moon_iv" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>