<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/radius_medium"
    app:cardElevation="@dimen/card_elevation_small"
    android:layout_marginHorizontal="@dimen/margin_very_small"
    android:layout_marginVertical="@dimen/margin_small"
    android:orientation="vertical">

    <ir.blackswan.travelapp.Views.WebImageView
        android:id="@+id/place_vh_iv"
        android:layout_width="@dimen/place_image_w"
        android:layout_height="@dimen/place_image_h"
        android:scaleType="centerCrop"

        />

    <TextView
        android:id="@+id/place_vh_tv"
        style="@style/textTittleMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|bottom"
        android:text="مکان"
        android:layout_marginBottom="@dimen/margin_medium"
        />

</com.google.android.material.card.MaterialCardView>