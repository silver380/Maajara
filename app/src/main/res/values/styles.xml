<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">


    <style name="button.primaryButton" parent="Widget.MaterialComponents.Button">
        <item name="android:fontFamily">@font/vazir_medium</item>
        <item name="android:textSize">20sp</item>
        <item name="cornerRadius">@dimen/radius_buttons</item>
    </style>


    <style name="button.secondaryButton" parent="button.primaryButton">
        <item name="android:backgroundTint">?attr/colorSecondary</item>

    </style>

    <style name="button.outLineButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:fontFamily">@font/vazir_medium</item>
        <item name="android:textSize">15sp</item>
        <item name="strokeColor">?attr/colorPrimary</item>
        <item name="cornerRadius">@dimen/radius_buttons</item>
    </style>

    <style name="button.TextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:fontFamily">@font/vazir_medium</item>
        <item name="android:textSize">15sp</item>
        <item name="cornerRadius">@dimen/radius_buttons</item>
    </style>

    <style name="button.TextButton.small" parent="button.TextButton">
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
    </style>

    <style name="textInputLayout.outLinedBox" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="errorTextAppearance">@style/textHint</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/radius_text_input</item>
        <item name="boxCornerRadiusBottomStart">@dimen/radius_text_input</item>
        <item name="boxCornerRadiusTopEnd">@dimen/radius_text_input</item>
        <item name="boxCornerRadiusTopStart">@dimen/radius_text_input</item>
    </style>


    <style name="editText" parent="Widget.MaterialComponents.TextInputEditText.OutlinedBox">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/vazir_medium</item>
    </style>

    <style name="editText.oneLine" parent="editText">
        <item name="android:maxLines">1</item>
        <item name="android:inputType">textShortMessage</item>
    </style>

    <style name="editText.nonInput" parent="editText">
        <item name="android:focusable">false</item>
        <item name="android:inputType">none</item>
    </style>

    <style name="textTittleBold">
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/vazir_bold</item>
        <item name="android:textColor">@color/colorNormalText</item>
    </style>

    <style name="textTittleMedium" parent="textTittleBold">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/vazir_medium</item>
    </style>

    <style name="textRegular" parent="textTittleBold">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/vazir_medium</item>
    </style>


    <style name="textSmall" parent="textTittleBold">
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">@font/vazir</item>
    </style>

    <style name="textLong" parent="textSmall">
        <item name="android:justificationMode" tools:targetApi="o">inter_word</item>
        <item name="android:lineSpacingExtra">@dimen/lines_extra_space</item>
    </style>

    <style name="textSmall.hintColor" parent="textSmall">
        <item name="android:textColor">@color/colorHint</item>
    </style>

    <style name="textHint" parent="textTittleBold">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/colorHint</item>
        <item name="android:fontFamily">@font/vazir</item>
    </style>


    <style name="activity_toolbar" parent="toolbar">
        <item name="navigationIcon">@drawable/ic_back</item>
    </style>

    <style name="toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:height">?android:attr/actionBarSize</item>
        <item name="titleTextAppearance">@style/textTittleBold</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="titleTextColor">@color/colorWhite</item>
    </style>


    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
        <item name="android:layoutDirection">ltr</item>
    </style>

    <style name="vLine">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:background">@color/colorDividers</item>
    </style>

    <style name="Widget.Theme.TravelApp.ActionBar.Fullscreen" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="Widget.Theme.TravelApp.ButtonBar.Fullscreen" parent="">
        <item name="android:background">@color/black_overlay</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
    </style>

</resources>