<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TravelApp" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#0A9894</item>
        <item name="colorPrimaryVariant">#0A8B88</item>
        <item name="colorOnPrimary">@color/colorBackgroundLighter</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">#0A9894</item>
        <item name="colorSecondaryVariant">#0A8B88</item>
        <item name="colorOnSecondary">@color/colorBackgroundLighter</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="android:layoutDirection">rtl</item>
    </style>
</resources>